    {{ 'title_user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    {{ include('menu.html.twig') }}
    {% include 'default/_form.html.twig' with {
        page_title: 'title_user_edit',
        page_title_param: {'%id%': users.id},
